
<h1 align="center">Trips Index</h1>

<h3><%=link_to 'Create New Trip', new_trip_path%></h3>




<% @trips.each do |trip| %>
<a href="<%=trip_path(trip)%>" class="list-group-item list-group-item-action active">
  <h4><%=trip.name%> <br></h4>
  <%="Destination:  #{trip.destination}"%>
  <%if trip.itineraries.count > 0%>
  Itinerary: <%trip.itineraries.each do |i|%><br>
  <%= link_to "Day #{i.day}", i %><br>
<% end %>
<%else%>
<br>
You have no itineraries yet!
<%=link_to "Add New Itinerary", new_itinerary_path%>
<% end %>

</a>

  <%end%>
