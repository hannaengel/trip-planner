<h2>Create New User</h2>

<% if flash[:message] %>
  <p>
    <%= flash[:message] %>
  </p>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :username %>
  <div class="field">
    <%= f.text_field :username %>
  </div>
  <%= f.label :password %>
  <div class="field">
    <%= f.password_field :password %>
  </div>
  <%= f.label :password_confirmation %>
  <div class="field">
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit 'Create User' %>
<% end %>
